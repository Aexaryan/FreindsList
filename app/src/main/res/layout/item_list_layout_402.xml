<!-- item_list_layout_402.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp">

    <!-- Rounded Image for Profile -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/alexander402_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/friend1"
        android:contentDescription="Friend Image"
        app:shapeAppearanceOverlay="@style/RoundedImage" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/alexander402_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Friend Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/alexander402_student_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student Number"
            android:textSize="14sp"
            android:textColor="#757575"/>

        <TextView
            android:id="@+id/alexander402_friend_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of Friends"
            android:textSize="14sp"
            android:textColor="#757575"/>
    </LinearLayout>
</LinearLayout>
